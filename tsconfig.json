{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
}